<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFFF8D"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:id="@+id/go_to_contact">

        <TextView
            android:id="@+id/textContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="33dp"
            android:text="@string/choose_from_contact" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#F4FF81"
        android:gravity="center"
        android:id="@+id/go_to_numeric_keyboard"
        android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/textNumberKeyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="33dp"
                android:text="@string/write_number" />
    </LinearLayout>

</LinearLayout>
