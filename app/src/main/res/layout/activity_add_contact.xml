<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_contact_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewContactName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Nazwa kontaktu:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/contact_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewContactName"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textViewContactNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/contact_name_input"
            android:text="Numer:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/contact_number_inputt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewContactNumber"
            android:ems="10"
            android:inputType="phone" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>