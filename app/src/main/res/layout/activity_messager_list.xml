<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sms_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".smsActivitys.MessagerListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sms_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/sms_buttons_layout"
            android:layout_marginBottom="0dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:scrollbars="vertical"
            android:verticalSpacing="5dp">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/sms_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/sms_button_delete"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="@string/newS"
                android:textAllCaps="false"
                android:textSize="26dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sms_button_select"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:text="@string/wybierz"
                android:textAllCaps="false"
                android:textSize="26dp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>