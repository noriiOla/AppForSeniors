<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:id="@+id/push_dialog_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        android:minWidth="0dp"
        android:background="@color/white"
        android:layout_centerInParent="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:id="@+id/popup_title_view"
            android:background="@color/colorPrimary"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="@string/popup_title_yes_no"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/popup_title"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="text"
            android:textSize="23sp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_below="@id/popup_title_view"
            android:id="@+id/push_dialog_text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/white"
            android:layout_below="@id/push_dialog_text">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tak"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:id="@+id/push_button_yes"
                android:textSize="23sp"
                android:layout_marginRight="0dp"
                android:visibility="gone"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nie"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:id="@+id/push_button_no"
                android:layout_weight="1"
                android:textSize="23sp"
                android:layout_marginLeft="0dp"
                android:visibility="gone"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/push_dialog_text"
            android:text="Rozumiem"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:id="@+id/push_button_ok"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>